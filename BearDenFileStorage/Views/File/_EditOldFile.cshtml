@model UserFileViewModel

@{
	ViewBag.Title = $"Edit {Model.Filename}";

}
@*@Html.ActionLink("Back to list", "Index","Home")*@
<a asp-action="Files" asp-controller="Home">Back to list</a>
<table>
	<tr>
		<th>Filename</th>
		<th>Extension</th>
		<th>Size</th>
		<th>Created</th>
		<th>Last Modified</th>
		<th>Owner</th>
		<th>Shared with</th>
	</tr>

	<tr>
		<td>@Model.Filename</td>
		<td>@Model.Extension</td>
		<td>@Model.Size</td>
		<td>@Model.UploadTime</td>
		<td>@Model.LastEdit</td>
		<td>@Model.Owner</td>
		<td>
			@for (int i = 0; i < Model.SharedUsers.Count; i++)
			{

				@(Model.SharedUsers[i] + (i != Model.SharedUsers.Count - 1 ? "," : ""));

			}
		</td>

	</tr>

</table>